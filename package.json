{
  "name": "local-memory-system",
  "version": "1.0.0",
  "description": "Fully local LLM memory system with vector storage",
  "type": "module",
  "main": "src/mcp-http-server.ts",
  "scripts": {
    "dev": "tsx watch src/mcp-http-server.ts",
    "start": "tsx src/mcp-http-server.ts",
    "mcp": "node mcp-server.js",
    "mcp:http": "tsx src/mcp-http-server.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "podman:up": "podman-compose up -d",
    "podman:down": "podman-compose down"
  },
  "keywords": [
    "llm",
    "memory",
    "vector-database",
    "local",
    "ollama",
    "qdrant"
  ],
  "author": "Abhilash Kulkarni",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@qdrant/js-client-rest": "^1.11.0",
    "axios": "^1.6.0",
    "commander": "^12.0.0",
    "hono": "^4.0.0",
    "ollama": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/ui": "^4.0.13",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.13"
  }
}
